# Groq API Configuration (Recommended - Free & Fast!)
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# HuggingFace API Configuration (Backup option)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# OpenAI Configuration (set to dummy value to use local embeddings)
OPENAI_API_BASE=dummy
OPENAI_API_KEY=dummy

# Model Configuration
# Using Kimi K2 through Groq (free and fast!)
LLM_MODEL=moonshotai/kimi-k2-instruct-0905
EMBEDDING_MODEL=text-embedding-3-small
TEMPERATURE=0.1

# Vector Database
CHROMA_PERSIST_DIR=./data/chroma_db

# Application Settings
MAX_RETRIEVAL_DOCUMENTS=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

